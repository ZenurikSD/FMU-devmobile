<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cinza_escuro"
    android:padding="32dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Receita"
        android:textSize="26dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite o valor:"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/valorModalReceita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="R$    00,00"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite a descrição:"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Ex: Salário"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <Button
            android:id="@+id/btnVoltarModalReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/cinza_claro"
            android:textColor="@color/black"
            android:text="Voltar"/>
        <Button
            android:id="@+id/btnAddModalReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="250dp"
            android:layout_marginEnd="41dp"
            android:backgroundTint="@color/verde"
            android:textColor="@color/black"
            android:text="Salvar"/>
    </RelativeLayout>
</LinearLayout>